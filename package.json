{
	"name": "hono-islands",
	"type": "module",
	"engines": {
		"node": ">=v22.15.0"
	},
	"scripts": {
		"db-init": "npm run db-init-schema && npm run db-seed",
		"db-seed": "tsx src/server/db/seed/index.ts",
		"db-gen-types": "kysely-codegen --out-file=src/server/db/schema/db-types.ts",
		"db-init-schema": "tsx src/server/db/schema/init-schema.ts",
		"client-dev": "node build-islands.mjs --watch",
		"client-build": "node build-islands.mjs",
		"server-dev": "tsx watch --clear-screen=false --import=./esm-hooks/register-hooks.js src/server/server.tsx",
		"server-build": "tsc",
		"dev": "concurrently --hide=\"0\" --prefix=\"none\"  \"npm:client-dev\" \"npm:server-dev\"",
		"build": "npm run client-build && npm run server-build",
		"start": "node dist/server/server.js",
		"prettier:fix": "prettier --write .",
		"prettier:check": "prettier --check .",
		"typescript:lint": "tsc --noEmit",
		"eslint:lint": "eslint ."
	},
	"dependencies": {
		"@dnd-kit/core": "^6.3.1",
		"@dnd-kit/sortable": "^10.0.0",
		"@hono/node-server": "^1.14.2",
		"@hono/react-renderer": "^1.0.1",
		"@hono/trpc-server": "^0.3.4",
		"@hono/zod-validator": "^0.5.0",
		"@trpc/client": "^11.3.1",
		"@trpc/server": "^11.3.1",
		"concurrently": "^9.1.2",
		"esbuild": "^0.25.4",
		"hono": "^4.7.10",
		"kysely": "^0.28.2",
		"pg": "^8.16.0",
		"prettier": "^3.5.3",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"socket.io": "^4.8.1",
		"superjson": "^2.2.2",
		"swr": "^2.3.3",
		"zod": "^3.25.28"
	},
	"devDependencies": {
		"@eslint/js": "^9.27.0",
		"@types/node": "^22.15.21",
		"@types/pg": "^8.15.2",
		"@types/react": "^19.1.5",
		"@types/react-dom": "^19.1.5",
		"dotenv": "^16.5.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"kysely-codegen": "^0.18.5",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.32.1"
	}
}
